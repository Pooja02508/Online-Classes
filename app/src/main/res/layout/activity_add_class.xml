<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher.AddClassActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Add Course"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <Spinner
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Course Name"
            android:inputType="textCapWords"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <TextView
            android:id="@+id/date_started"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Date Started"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <TextView
            android:id="@+id/date_end"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Date End"
            android:textColor="@color/black"
            android:gravity="start|center"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <Spinner
            android:id="@+id/spinner_states"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <Spinner
            android:id="@+id/spinner_districts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <EditText
            android:id="@+id/language"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Language"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>


        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Address"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <EditText
            android:id="@+id/teacherName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Teacher Name"
            android:paddingLeft="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <EditText
            android:id="@+id/whatsappLink"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Whatsapp Link"
            android:paddingStart="15dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_border"/>

        <Button
            android:id="@+id/save_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>